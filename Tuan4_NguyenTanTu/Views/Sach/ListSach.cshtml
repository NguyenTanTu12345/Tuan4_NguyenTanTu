@model IEnumerable<Tuan4_NguyenTanTu.Models.Sach>
@{
    ViewBag.Title = "ListSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>THÔNG TIN SÁCH</h2>
<div>
    @Html.ActionLink("Create New", "Create", "Sach", new { @class = "btn btn-default"})
    <input type="text" placeholder="Vui lòng nhập tên sách cần tìm" class="pull-right form-control" style="width:300px;height:auto;" />
    <p class="pull-right" style="padding-left:5px;"><strong>Tìm kiếm : </strong></p>
</div>
<br />
<table class="table">
    <tr>
        <th>Mã loại</th>
        <th>Tên sách</th>
        <th>Hình</th>
        <th>Giá bán</th>
        <th>Ngày cập nhật</th>
        <th>Số lượng tồn</th>
        <th></th>
    </tr>
    @foreach(var item in Model)
            {
<tr>
    <td>@Html.DisplayFor(modelItem => item.maloai)</td>
    <td>@Html.DisplayFor(modelItem => item.tensach)</td>
    <td><img src="@item.hinh"alt="Hình sách" /></td>
    <td><span style="color:green;">@Html.DisplayFor(modelItem => item.giaban)VND</span></td>
    <td>@Html.DisplayFor(modelItem => item.ngaycapnhat)</td>
    <td>@Html.DisplayFor(modelItem => item.soluongton)</td>
    <td>@Html.ActionLink("Edit", "Edit", new { id = item.masach }, new { @class="btn btn-info"})@Html.ActionLink("Detail", "Detail", new { id = item.masach }, new { @class ="btn btn-primary"})@Html.ActionLink("Delete", "Delete", new { id = item.masach }, new { @class = "btn btn-danger" })</td>
</tr>
            }
</table>


